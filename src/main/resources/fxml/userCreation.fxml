<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.locvoiturefx.controllers.UserController" spacing="10" alignment="CENTER">
    <Label text="Création d'un utilisateur" style="-fx-font-size: 18px;"/>
    <TextField fx:id="usernameField" promptText="Nom d'utilisateur"/>
    <PasswordField fx:id="passwordField" promptText="Mot de passe"/>
    <ComboBox fx:id="roleComboBox" promptText="Rôle"/>
    <HBox spacing="10">
        <Button text="Créer" onAction="#handleCreateUser"/>
        <Button text="Retour" onAction="#handleBack"/>
    </HBox>
    <Label fx:id="statusLabel" text=""/>
</VBox>
